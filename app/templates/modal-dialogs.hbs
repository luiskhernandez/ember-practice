<div class="page-header">
  <h1>Example of how to use <small> Ember modals add on</small></h1>
</div>
<div class="panel panel-default">
<div class="panel-heading">
  Ember-modals example usage
</div>
<div class="panel-body">
  <div class="bs-example" data-example-id="btn-variants">
    <button class="btn btn-default" {{action "confirm" }}> Render template in modal</button>
    <!-- <button type="button" class="btn btn-primary">Primary</button> -->
    <!-- <button type="button" class="btn btn-success">Success</button> -->
    <!-- <button type="button" class="btn btn-info">Info</button> -->
    <!-- <button type="button" class="btn btn-warning">Warning</button> -->
    <!-- <button type="button" class="btn btn-danger">Danger</button> -->
    <!-- <button type="button" class="btn btn-link">Link</button> -->
  </div>
</div>
</div>

<div>
     <!--id is important, so we can reference it on the toggler component-->
    {{#em-modal configName="bs" id="modal1"}}
    {{#em-modal-title}}
        <!--optional toggler to close the opened modal-->
        {{#em-modal-toggler class="close"}}×Close{{/em-modal-toggler}}
        <h4 class="modal-title">I'm a modal title</h4>
    {{/em-modal-title}}
    <!--the content of the modal...-->
    {{#em-modal-body}}
        One fine body…
    {{/em-modal-body}}
    <!--optional footer section of the modal, usually contains buttons-->
    {{#em-modal-footer}}
        {{#em-modal-toggler class="btn btn-default"}}Close{{/em-modal-toggler}}
    {{/em-modal-footer}}
{{/em-modal}}

<!--the toggler to open the modal when clicked, modal-id property must reference the modal's id-->
{{#em-modal-toggler modal-id="modal1" class="btn btn-primary"}}Click me!{{/em-modal-toggler}} 
</div>
